@using Newtonsoft.Json;
@model IEnumerable<CourseSelectionSystem.Models.CourseModel>
@{
    Layout = null;
}
<script>
    if (@ViewBag.Error) {
        alert("@ViewBag.Error");
    }
</script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LecturerName)
        </th>
        <th></th>
    </tr>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="6" align="center">
                查無資料
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>

            <td>
                <button type="button" class="btDelete btn btn-danger" data-id="@item.Serial">刪除</button>
                <button type="button" class="btEdit btn btn-primary" data-json="@JsonConvert.SerializeObject(item)">編輯</button>
            </td>
        </tr>
    }
</table>
